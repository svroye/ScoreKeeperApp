<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="default_value">16dp</dimen>

    <!--margin around the "team A" and "team B" TextViews, as well as the margin
     around the corresponding score TextViews-->
    <dimen name="margin_team_and_score">40dp</dimen>

    <!-- padding around the parameters (e.g. fouls) -->
    <dimen name="padding_parameters">16dp</dimen>

    <!-- height of the + buttons -->
    <dimen name="height_button">40dp</dimen>

    <!-- padding buttom for the score value TextView,
    margin left and right for the score buttons
    and plus buttons-->
    <dimen name="padding_score">24dp</dimen>

    <!-- margin bottom for the score button -->
    <dimen name="margin_bottom_score_button">38dp</dimen>

    <!-- margin bottom for the plus and reset button -->
    <dimen name="margin_bottom_plus_reset_button">8dp</dimen>

    <!-- margin left and right for the reset button -->
    <dimen name="margin_reset">22dp</dimen>
</resources>
